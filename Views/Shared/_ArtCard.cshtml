@model Art
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Art"
                       asp-action="Details"
                       asp-route-id="@Model.ArtId">@Model.Name</a>
                </h3>
                <p>@Model.Description</p>
            </div>

            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-primary"
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-artId="@Model.ArtId">Add to cart</a>
                </p>
            </div>
        </div>
        <a class="btn btn-primary" asp-controller="" asp-action=""
           asp-route-artId="@Model.ArtId">Add to favarioties</a>
        <a class="btn btn-primary" asp-controller="Art" asp-action="List">Get Back</a>
    </div>